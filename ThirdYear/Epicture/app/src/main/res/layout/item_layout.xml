<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/Alpha0"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Alpha0">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/Alpha0"
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round" />

        <ImageButton
            android:id="@+id/iv_favorite"
            style="@android:style/Widget.ImageButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@id/iv_image"
            android:layout_marginStart="0dp"
            android:background="@color/Alpha0"
            android:backgroundTint="@color/Alpha0"
            android:scaleType="fitXY"
            android:src="@drawable/favorite_off"
            android:tooltipText="Favorite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv_image"
            android:layout_alignBottom="@id/iv_image"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/iv_image"
            android:background="@color/Alpha0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/view_icon" />

                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="1"
                    android:text="10"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/like_on" />

                <TextView
                    android:id="@+id/tv_likeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="1"
                    android:text="10"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dislike_on" />

                <TextView
                    android:id="@+id/tv_dislikeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="1"
                    android:text="10"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:text="Description"
                android:textColor="@color/colorAccent2"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Alpha0"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iv_like"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/Alpha0"
                    android:backgroundTint="@color/Alpha0"
                    android:scaleType="fitXY"
                    android:src="@drawable/like_off"
                    android:tooltipText="Like" />

                <ImageButton
                    android:id="@+id/iv_dislike"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/Alpha0"
                    android:backgroundTint="@color/material_on_background_disabled"
                    android:scaleType="fitXY"
                    android:src="@drawable/dislike_off"
                    android:tooltipText="Dislike" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>