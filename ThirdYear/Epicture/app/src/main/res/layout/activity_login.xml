<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background1_portrait"
    tools:context=".LoginActivity">

    <ImageButton
        android:id="@+id/connexion_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="115dp"
        android:layout_height="108dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto_light"
        android:scaleType="fitXY"
        android:src="@drawable/loginarrow"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:tooltipText="@string/login_button_name"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/connexion_button2"
        android:layout_width="115dp"
        android:layout_height="108dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/roboto_light"
        android:textAlignment="center"
        android:textSize="24sp"
        android:tooltipText="@string/login_button_name"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821"
        tools:text="@string/login_button_name" />

    <ImageView
        android:id="@+id/backBanner"
        android:layout_width="730dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:background="@drawable/backbanner"
        android:backgroundTint="@color/colorPrimary"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/connexion_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705"
        app:srcCompat="@drawable/backbanner" />

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="422dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@+id/connexion_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705"
        app:srcCompat="@drawable/title2" />


</androidx.constraintlayout.widget.ConstraintLayout>