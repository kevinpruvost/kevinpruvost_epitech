<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPosts"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <EditText
        android:id="@+id/upload_title_inputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Title ..."
        android:inputType="textShortMessage"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/upload_description_inputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="Description ..."
        android:inputType="textLongMessage"
        android:maxLines="5"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold" />

    <Button
        android:id="@+id/upload_gallery_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorFavorites"
        android:fontFamily="@font/roboto_light"
        android:onClick="upload_galleryButtonEffect"
        android:text="Get File From Gallery"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/upload_take_picture_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorFavorites"
        android:fontFamily="@font/roboto_light"
        android:onClick="dispatchTakePictureIntent"
        android:text="Take Picture"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/upload_validate_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorFavorites"
        android:fontFamily="@font/roboto_light"
        android:onClick="upload_validateButtonEffect"
        android:text="Submit"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/upload_cancel_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorFavorites"
        android:fontFamily="@font/roboto_light"
        android:onClick="upload_cancelButtonEffect"
        android:text="Cancel"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/upload_file_uploaded_text"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="No file chosen..."
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background" />
</LinearLayout>